<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-800 p-10 text-white">
      <a href="/" class="text-blue-600 block mb-5 text-xl tracking-tighter">
        Back to Home</a
      >
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex flex-wrap gap-3">
   <% if(users.length>0){%>
    <% users.forEach((e)=>{ %>
      <div class="user w-72 p-4 bg-zinc-600 rounded-md">
          <div class="w-full h-72 object-cover rounded overflow-hidden">
              <img class="w-full h-full object-cover" src="<%=e.image %>" alt="">
          </div>
          <h1 class="text-white mt-1 uppercase text-2xl tracking-tighter">
        <%=e.name%>
          </h1>
          <h1 class="text-zinc-300 text-md tracking-tighter">
            <%=e.email%>
          </h1>
          <div class="flex gap-3 justify-between">
            <a href="/edit/<%=e._id%>" class="text-blue-300 mt-2"> Edit User</a>
            <a href="/delete/<%=e._id %>" class="text-red-400 mt-2"> Delete User</a>
          </div>
        </div>
 <% })%>
    <%} else{%>
      <h3 class="text-xl tracking-tighter font-thin">No Users Yet . . </h3>
      <%}%>
      </div>
    </div>
  </body>
</html>
